# Translation Provider: 'openai', 'amazonbedrock', 'huggingface', or 'mock' for development
NEXT_PUBLIC_TRANSLATION_PROVIDER=mock
NEXT_PUBLIC_ENABLE_REAL_TRANSLATION=false

# Amazon Bedrock Model
NEXT_PUBLIC_BEDROCK_MODEL=amazon.titan-text-express-v1

# OpenAI Configuration
OPENAI_API_KEY=your-openai-key-here

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key

# Hugging Face Configuration
HUGGINGFACE_API_KEY=your-huggingface-key-here
